            div.main
                // Navbar
                nav.navbar.navbar-expand.px-4.pt-4.py-3
                    form.d-none.d-sm-inline-block(action='#')
                    .navbar-collapse.collapse
                        .dropdown.position-fixed.me-3.end-0
                            button.btn.dropdown-toggle(type='button' data-bs-toggle='dropdown' aria-expanded='false')
                                | Your Name
                            ul.dropdown-menu.dropdown-menu-end.nav-background.py-2
                                li
                                    a.dropdown-item(href='#')
                                        i.lni.lni-user
                                        span Profile
                                li
                                    a.dropdown-item(href='#')
                                        i.lni.lni-exit
                                        span Logout
                // Content
                main.content.px-3.py-4
                    div.container-fluid
                        div.mb-3
                            block content

        // JavaScript
        script(src='/bootstrap/dist/js/bootstrap.bundle.min.js')
        script.
            const hamBurger = document.querySelector('.toggle-btn');
            hamBurger.addEventListener('click', function () {
                document.querySelector('#sidebar').classList.toggle('expand');
            });
