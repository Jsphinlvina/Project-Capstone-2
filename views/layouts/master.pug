        meta(name="viewport", content="width=device-width, initial-scale=1")
        title Pengajuan Beasiswa Internal
        // Bootstrap
        link(rel='stylesheet', href='/bootstrap/dist/css/bootstrap.min.css')
        //Icon
        link(rel='stylesheet', href='https://cdn.lineicons.com/4.0/lineicons.css')
        //css
        link(rel='stylesheet', href='/css/dashboard.css')

    body
        div.wrapper
            // Sidebar
            aside#sidebar.sticky-top
                .d-flex
                    button.toggle-btn(type='button')
                        i.lni.lni-grid-alt
                    .sidebar-logo
                        a(href='') Maranatha
                ul.sidebar-nav
                    li.sidebar-item
                        a.sidebar-link(href='/home')
                            i.lni.lni-dashboard
                            span Home
                    li.sidebar-item
                        a.sidebar-link.collapsed.has-dropdown(href='#' data-bs-toggle='collapse' data-bs-target='#auth' aria-expanded='false' aria-controls='auth')
                            i.lni.lni-folder
                            span Beasiswa Mahasiswa
                        ul#auth.sidebar-dropdown.list-unstyled.collapse(data-bs-parent='#sidebar')
                            li.sidebar-item
                                a.sidebar-link(href='/pengajuan') Pengajuan
                            li.sidebar-item
                                a.sidebar-link(href='riwayat') Riwayat
                    li.sidebar-item
                        a.sidebar-link.collapsed.has-dropdown(href='#' data-bs-toggle='collapse' data-bs-target='#master' aria-expanded='false' aria-controls='master')
                            i.lni.lni-folder
                            span Admin punya
                        ul#master.sidebar-dropdown.list-unstyled.collapse(data-bs-parent='#sidebar')
                            li.sidebar-item
                                a.sidebar-link(href='/jenisBeasiswa') Jenis Beasiswa
                            li.sidebar-item
                                a.sidebar-link(href='/mahasiswa') Mahasiswa
                            li.sidebar-item
                                a.sidebar-link(href='/fakultas') Fakultas
                            li.sidebar-item
                                a.sidebar-link(href='/programStudi') Program Studi
                            li.sidebar-item
                                a.sidebar-link(href='/userManagement') User Management
                    li.sidebar-item
                        a.sidebar-link(href='')
                            i.lni.lni-download
                            span Hasil
                    li.sidebar-item
                        a.sidebar-link(href='/approvalFakultas')
