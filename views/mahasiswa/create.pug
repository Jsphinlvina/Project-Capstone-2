extends ../layouts/master

block content
    main.content.px-3.py-4
        div.container-fluid
            div.mb-3
                div.d-flex.justify-content-between.mb-3
                    h3.fw-bold.fs-4.mb-3 Add Mahasiswa
                    a.btn.btn-warning.px-4.pt-2(href='javascript:history.back()')
                        strong Back
                div.card.bg-light.shadow.border-0.rounded-3.mb-4
                    form.p-5(method='post', action='/')
                        div.row.mb-3
                            label.form-label.fw-semibold(for="id") ID
                            div.col-sm-8
                                input.form-control(type="text",
                                    name="id",
                                    id="id",
                                    required, autofocus,
                                    maxlength=1
                                    placeholder="1")
                        div.row.mb-3
                            label.form-label.fw-semibold(for="name") Name
                            div.col-sm-8
                                input.form-control(type="text",
                                    name="name",
                                    id="name",
                                    required, autofocus,
                                    maxlength=20,
                                    placeholder="your name")
                        div.row.mb-3
                            label.form-label.fw-semibold(for="email") Email
                            div.col-sm-8
                                input.form-control(type="text",
                                    name="email",
                                    id="email",
                                    required, autofocus,
                                    maxlength=50,
                                    placeholder="your email")
                        div.row.mb-3
                            label.form-label.fw-semibold(for="password") Password
                            div.col-sm-8
                                input.form-control(type="text",
                                    name="password",
                                    id="password",
                                    required, autofocus,
                                    maxlength=8,
                                    placeholder="your password")
                        div.row.mb-3
                            label.form-label.fw-semibold(for="name") Status
                            div.col-sm-8
                                select.form-select(aria-label='Default select example')
                                    option(selected='') Select status
                                    option(value='1') Active
                                    option(value='0') Non-active
                        div.row.mb-3
                            label.form-label.fw-semibold(for="name") Program Studi
                            div.col-sm-8
                                select.form-select(aria-label='Default select example')
                                    option(selected='') Select status
                                    option(value='teknik_informatika') Teknik Informatika
                        div.row.mb-3
                            label.form-label.fw-semibold(for="name") Role
                            div.col-sm-8
                                select.form-select(aria-label='Default select example')
                                    option(selected='') Select status
                                    option(value='0') Admin
                                    option(value='1') Mahasiswa
                                    option(value='2') Fakultas
                                    option(value='3') Program Studi
                        div.row.mb-3
                            label.form-label.fw-semibold(for="password") IPK
                            div.col-sm-8
                                input.form-control(type="number",
                                    step="0.01",
                                    name="ipk",
                                    id="ipk",
                                    required, autofocus,
                                    maxlength=8,
                                    placeholder="IPK")
                        div.row.mb-3
                            label.form-label.fw-semibold(for="password") Angkatan
                            div.col-sm-8
                                input.form-control(type="number",
                                    name="angkatan",
                                    id="angkatan",
                                    required, autofocus,
                                    maxlength=4,
                                    placeholder="your angkatan")
                        div.row.mb-3
                            label.form-label.fw-semibold(for="notlp") No tlp
                            div.col-sm-8
                                input.form-control(type="text",
                                    name="notlp",
                                    id="notlp",
                                    required, autofocus,
                                    maxlength=10,
                                    placeholder="you phone")
                        div.row.mb-3
                            label.form-label.fw-semibold(for="alamat") Alamat
                            div.col-sm-8
                                input.form-control(type="text",
                                    name="alamat",
                                    id="alamat",
                                    required, autofocus,
                                    maxlength=100,
                                    placeholder="your alamat")

                        div.d-flex
                            button.btn.btn-success.ms-auto(type="submit") Create Mahasiswa