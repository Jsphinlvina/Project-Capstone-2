extends ../layouts/master

block content
    main.content.px-3.py-4
        div.container-fluid
            div.mb-3
                div.d-flex.justify-content-between.mb-3
                    h3.fw-bold.fs-4.mb-3 Add Mahasiswa
                    a.btn.btn-warning.px-4.pt-2(href='javascript:history.back()')
                        strong Back
                div.card.bg-light.shadow.border-0.rounded-3.mb-4
                    form.p-5(method='post', action='/mahasiswa/store')
                        div.row.mb-3
                            label.form-label.fw-semibold(for="id") ID
                            div.col-sm-8
                                input.form-control(type="text",
                                    name="id",
                                    id="id",
                                    required, autofocus,
                                    maxlength=7,
                                    placeholder="1")
                        div.row.mb-3
                            label.form-label.fw-semibold(for="name") Name
                            div.col-sm-8
                                input.form-control(type="text",
                                    name="name",
                                    id="name",
                                    required, autofocus,
                                    maxlength=50,
                                    placeholder="your name")
                        div.row.mb-3
                            label.form-label.fw-semibold(for="email") Email
                            div.col-sm-8
                                input.form-control(type="text",
                                    name="email",
                                    id="email",
                                    required, autofocus,
                                    maxlength=255,
                                    placeholder="your email")
                        div.row.mb-3
                            label.form-label.fw-semibold(for="password") Password
                            div.col-sm-8
                                input.form-control(type="password",
                                    name="password",
                                    id="password",
                                    required, autofocus,
                                    maxlength=255,
                                    placeholder="your password")
                        div.row.mb-3
                            label.form-label.fw-semibold(for="status") Status
                            div.col-sm-8
                                select.form-select(aria-label='Default select example' name='status' id='status')
                                    option(selected='') Select status
                                    option(value=1) Active
                                    option(value=0) Non-active
                        div.row.mb-3
                            label.form-label.fw-semibold(for="program_studi_id") Program Studi
                            div.col-sm-8
                                select.form-select(aria-label='Default select example' name='program_studi_id' id='program_studi_id')
                                    option(selected='') Select program studi
                                    each programStudi in program_studi
                                        option(value=`${programStudi.id}`) #{programStudi.name}
                        div.row.mb-3
                            label.form-label.fw-semibold(for="role_id") Role
                            div.col-sm-8
                                select.form-select(aria-readonly aria-label='Default select example' name='role_id' id='role_id')
                                    option(value='4') Mahasiswa

                        div.row.mb-3
                            label.form-label.fw-semibold(for="ipk") IPK
                            div.col-sm-8
                                input.form-control(type="text",
                                    name="ipk",
                                    id="ipk",
                                    required, autofocus,
                                    placeholder="4.00")
                        div.row.mb-3
                            label.form-label.fw-semibold(for="angkatan") Angkatan
                            div.col-sm-8
                                input.form-control(type="text",
                                    name="angkatan",
                                    id="angkatan",
                                    maxlength=4,
                                    required, autofocus,
                                    placeholder="2022")
                        div.row.mb-3
                            label.form-label.fw-semibold(for="no_tlp") No Telepon
                            div.col-sm-8
                                input.form-control(type="text",
                                    name="no_tlp",
                                    id="no_tlp",
                                    required, autofocus,
                                    maxlength=20,
                                    placeholder="+628122341422")
                        div.row.mb-3
                            label.form-label.fw-semibold(for="alamat") Alamat tinggal
                            div.col-sm-8
                                input.form-control(type="text",
                                    name="alamat",
                                    id="alamat",
                                    required, autofocus,
                                    maxlength=50,
                                    placeholder="Jl. Surya Sumantri no. 56")

                        div.d-flex
                            button.btn.btn-success.ms-auto(type="submit") Create User
