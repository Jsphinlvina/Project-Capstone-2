            //ADD MODAL
            div#addMahasiswaModal.modal.fade(tabindex='-1' aria-labelledby='addMahasiswaLabel' aria-hidden='true')
                div.modal-dialog
                    div.modal-content
                        div.modal-header
                            h1#addJenisBeasiswaModalLabel.modal-title.fs-5 Add New Mahasiswa
                            button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
                        div.modal-body
                            div.mb-3.row
                                label.col-sm-4.col-form-label NRP
                                div.col-sm-8
                                    input.form-control(type='text' placeholder='Enter nrp')
                            div.mb-3.row
                                label.col-sm-4.col-form-label Nama
                                div.col-sm-8
                                    input.form-control(type='text' placeholder='Enter name')
                            div.mb-3.row
                                label.col-sm-4.col-form-label Nama Fakultas
                                div.col-sm-8
                                    select.form-select(aria-label='Default select example')
                                        option(selected='') Select fakultas
                                        option(value='teknologiInformasi') Teknologi Informasi
                                        option(value='bisnis') Bisnis
                                        option(value='kedokteranGigi') Kedokteran Gigi
                            div.mb-3.row
                                label.col-sm-4.col-form-label Nama Program Studi
                                div.col-sm-8
                                    select.form-select(aria-label='Default select example')
