extends ../layouts/master

block content
    main.content.px-3.py-4
        div.container-fluid
            div.mb-3
                div.d-flex.justify-content-between.mb-3
                    h3.fw-bold.fs-4.mb-3 Add Beasiswa
                    a.btn.btn-warning.px-4.pt-2(href='javascript:history.back()')
                        strong Back
                div.card.bg-light.shadow.border-0.rounded-3.mb-4
                    form.p-5(method='post', action=' ')
                        div.row.mb-3
                            label.form-label.fw-semibold(for="id") ID
                            div.col-sm-8
                                input.form-control(type="text",
                                    name="id",
                                    id="id",
                                    required, autofocus,
                                    maxlength=1
                                    placeholder="1")
                        div.row.mb-3
                            label.form-label.fw-semibold(for="name") Name
                            div.col-sm-8
                                input.form-control(type="text",
                                    name="name",
                                    id="name",
                                    required, autofocus,
                                    maxlength=20,
                                    placeholder="your name")

                        div.d-flex
                            button.btn.btn-success.ms-auto(type="submit") Create Jenis Beasiswa