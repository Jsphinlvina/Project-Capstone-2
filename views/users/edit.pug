extends ../layouts/master

block content
    main.content.px-3.py-4
        div.container-fluid
            div.mb-3
                div.d-flex.justify-content-between.mb-3
                    h3.fw-bold.fs-4.mb-3 Edit User
                    a.btn.btn-warning.px-4.pt-2(href='javascript:history.back()')
                        strong Back
                div.card.bg-light.shadow.border-0.rounded-3.mb-4
                    form.p-5(method='post', action='/users/update')
                        div.row.mb-3
                            label.form-label.fw-semibold(for="id") ID
                            div.col-sm-8
                                input.form-control(type="text",
                                    name="id",
                                    id="id",
                                    readonly
                                    value=`${user.id}`)
                        div.row.mb-3
                            label.form-label.fw-semibold(for="name") Name
                            div.col-sm-8
                                input.form-control(type="text",
                                    name="name",
                                    id="name",
                                    required, autofocus,
                                    value=`${user.name}`)
                        div.row.mb-3
                            label.form-label.fw-semibold(for="email") Email
                            div.col-sm-8
                                input.form-control(type="text",
                                    name="email",
                                    id="email",
                                    required, autofocus,
                                    value=`${user.email}`)
                        div.row.mb-3
                            label.form-label.fw-semibold(for="email") Password
                            div.col-sm-8
                                input.form-control(type="text",
                                    name="password",
                                    id="password",
                                    required, autofocus,
                                    value=`${user.password}`)
                        div.row.mb-3
                            label.form-label.fw-semibold(for="name") Status
                            div.col-sm-8
                                select.form-select(aria-label='Default select example')
                                    if user.status == 1
                                        option(value="1" selected) Aktif
                                        option(value="0") Tidak Aktif
                                    else
                                        option(value="1") Aktif
                                        option(value="0" selected) Tidak Aktif
                            label.form-label.fw-semibold(for="program_studi_id") Program Studi
                            div.col-sm-8
                                select.form-select(aria-label='Default select example' name='program_studi_id' id='program_studi_id')
                                    option(value=`${user.program_studi_id}` selected='') #{user.program_studi.name}
                                    each programStudi in program_studi
                                        option(value=`${programStudi.id}`) #{programStudi.name}
                        div.row.mb-3
                            label.form-label.fw-semibold(for="role_id") Role
                            div.col-sm-8
                                select.form-select(aria-label='Default select example' name='program_studi_id' id='role_id')
                                    option(value=`${user.role_id}` selected='') #{user.role.name}
                                    each role in roles
                                        option(value=`${role.id}`) #{role.name}

                        div.d-flex
                            button.btn.btn-success.ms-auto(type="submit") Edit User