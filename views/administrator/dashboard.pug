extends ../layouts/master

block content
    main.content.px-3.py-4
        div.container-fluid
            h3.fw-bold.fs-4.mb-3 Beasiswa Internal Maranatha
            div.card.bg-light.shadow.border-0.rounded-3.mb-4
                div.border-bottom.ps-3.pt-3
                    p.fw-semibold Manajemen Data
                div.table-responsive.small.px-3
                    table.table.table-striped.table-sm.mt-1
                        thead
                            tr
                                th(scope='col') Jenis Data
                                th(scope='col') Jumlah
                        tbody
                            tr
                                td Jenis Beasiswa
                                td 10
                            tr
                                td Fakultas
                                td 5
                            tr
                                td Program Studi
                                td 15
                            tr
                                td Pengguna
                                td 50

        // JavaScript
        script(src='/bootstrap/dist/js/bootstrap.bundle.min.js')
        script.
            const hamBurger = document.querySelector('.toggle-btn');
            hamBurger.addEventListener('click', function () {
                document.querySelector('#sidebar').classList.toggle('expand');
            });
