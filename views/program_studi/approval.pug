extends ../layouts/master

block content
    main.content.px-3.py-4
        div.container-fluid
            div.mb-3
                div.d-flex.justify-content-between.mb-3
                    h3.fw-bold.fs-4.mb-3 Approval
                div.card.bg-light.shadow.border-0.rounded-3.mb-4
                    div.border-bottom.ps-3.pt-3
                        p.fw-semibold Approval pengajuan beasiswa
                    div.table-responsive.small.px-3
                        table.table.table-striped.table-sm.mt-1
                            thead
                                tr
                                    th(scope='col') NRP
                                    th(scope='col') Nama
                                    th(scope='col') Nama beasiswa
                                    th(scope='col') Periode
                                    th.text-center(scope='col') Action
                            tbody
                                tr
                                    td 2272004
                                    td Jessica Luwia
                                    td Akademik
                                    td Ganjil 22/23
                                    td.text-center
                                        button.btn.btn-secondary(data-bs-toggle="modal" data-bs-target="#approvalModal")
                                            svg.bi.bi-box-arrow-up-left(xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='currentColor' viewbox='0 0 16 16')
                                                path(fill-rule='evenodd' d='M7.364 3.5a.5.5 0 0 1 .5-.5H14.5A1.5 1.5 0 0 1 16 4.5v10a1.5 1.5 0 0 1-1.5 1.5h-10A1.5 1.5 0 0 1 3 14.5V7.864a.5.5 0 1 1 1 0V14.5a.5.5 0 0 0 .5.5h10a.5.5 0 0 0 .5-.5v-10a.5.5 0 0 0-.5-.5H7.864a.5.5 0 0 1-.5-.5')
                                                path(fill-rule='evenodd' d='M0 .5A.5.5 0 0 1 .5 0h5a.5.5 0 0 1 0 1H1.707l8.147 8.146a.5.5 0 0 1-.708.708L1 1.707V5.5a.5.5 0 0 1-1 0z')

                                tr
                                    td 2353001
                                        td Kekey
                                        td Akademik
                                        td Genap 22/23
                                        td.text-center
                                            button.btn.btn-secondary(data-bs-toggle="modal" data-bs-target="#approvalModal")
                                                svg.bi.bi-box-arrow-up-left(xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='currentColor' viewbox='0 0 16 16')
                                                    path(fill-rule='evenodd' d='M7.364 3.5a.5.5 0 0 1 .5-.5H14.5A1.5 1.5 0 0 1 16 4.5v10a1.5 1.5 0 0 1-1.5 1.5h-10A1.5 1.5 0 0 1 3 14.5V7.864a.5.5 0 1 1 1 0V14.5a.5.5 0 0 0 .5.5h10a.5.5 0 0 0 .5-.5v-10a.5.5 0 0 0-.5-.5H7.864a.5.5 0 0 1-.5-.5')
                                                    path(fill-rule='evenodd' d='M0 .5A.5.5 0 0 1 .5 0h5a.5.5 0 0 1 0 1H1.707l8.147 8.146a.5.5 0 0 1-.708.708L1 1.707V5.5a.5.5 0 0 1-1 0z')

            div#approvalModal.modal.fade(tabindex='-1' aria-labelledby='approvalLabel' aria-hidden='true')
                div.modal-dialog.modal-lg
                    div.modal-content
                        div.modal-header
                            h1#approvalModalLabel.modal-title.fs-5 Approval
                            button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
                        div.modal-body
                            form(action='/submit-upload' method='post' enctype='multipart/form-data')
                                div.row.mb-3
                                    label.col-sm-4.col-form-label(for='surat_rekomendasi') Surat Rekomendasi Dosen :
                                    div.col-sm-8
                                        input#surat_rekomendasi.form-control(type='file' name='surat_rekomendasi' required)
                                div.row.mb-3
                                    label.col-sm-4.col-form-label(for='pkm') Surat Pernyataan Bersedia Membuat PKM :
                                    div.col-sm-8
                                        input#pkm.form-control(type='file' name='pkm' required)
                                div.row.mb-3
                                    label.col-sm-4.col-form-label(for='tidak_terima_beasiswa') Surat Pernyataan Tidak Menerima Beasiswa Lain :
                                    div.col-sm-8
                                        input#tidak_terima_beasiswa.form-control(type='file' name='tidak_terima_beasiswa' required)
                                div.row.mb-3
                                    label.col-sm-4.col-form-label(for='dkbs') DKBS Baru :
                                    div.col-sm-8
                                        input#dkbs.form-control(type='file' name='dkbs' required)
                                div.row.mb-3
                                    label.col-sm-4.col-form-label(for='transkrip') Transkrip Nilai :
                                    div.col-sm-8
                                        input#transkrip.form-control(type='file' name='transkrip' required)
                                div.row.mb-3
                                    label.col-sm-4.col-form-label(for='lampiran') Lampiran Lainnya (Tidak Wajib) :
                                    div.col-sm-8
                                        input#lampiran.form-control(type='file' name='lampiran')
                        div.modal-footer
                            button.btn.btn-danger(type='button' data-bs-dismiss='modal') Decline
                            button.btn.btn-success(type='button') Approve